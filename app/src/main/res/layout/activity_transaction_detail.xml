<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafcfd"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Biên nhận chuyển tiền"
            android:textColor="#052543"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_share"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Thời gian"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_datetime"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="05/06/2018"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Mã giao dịch"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_txid"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="393939393"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="#10000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Người gửi"
                        android:textColor="#052543"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Mã giao dịch"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_username_my"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="HO TRONG CHUONG"
                            android:textAllCaps="true"
                            android:textColor="#0EAFF2"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Tên ngân hàng"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_bank_name_my"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Vietcombank"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Số tài khoản"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_bank_acc_my"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="1002929293"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="#10000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Người nhận"
                        android:textColor="#052543"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Mã giao dịch"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="HO TRONG CHUONG"
                            android:textAllCaps="true"
                            android:textColor="#0EAFF2"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Tên ngân hàng"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Vietcombank"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Số tài khoản"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_bank_acc"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="1002929293"
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Mô tả"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Chuyển tiền cho Ngọc Ánh "
                            android:textColor="#052543"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="#10000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Số tiền"
                            android:textColor="#8090A0"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="1000.000 VND"
                            android:textAllCaps="true"
                            android:textColor="#0EAFF2"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_btn_submit"
        android:paddingBottom="10dp"
        android:text="Hoàn tất"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
